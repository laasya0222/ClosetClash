doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{title}
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-white.shadow-sm.fixed-top
      .container
        a.navbar-brand(href='/') Closet Clash
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarMain', aria-controls='navbarMain', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarMain.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            if currentUser
              li.nav-item
                a.nav-link(href='/battle/') Battle
              li.nav-item
                a.nav-link(href='/community') Community
              li.nav-item
                a.nav-link(href='/stats/') Stats
          ul.navbar-nav.ms-auto.mb-2.mb-lg-0
            if currentUser
              li.nav-item
                a.nav-link(href='/closet') My Closet 
              li.nav-item
                a.nav-link(href='/users/logout') Logout
            else
              //- These links are now part of the main flow, not separate
              li.nav-item
                a.nav-link(href='/users/login') Login
              li.nav-item
                a.nav-link(href='/users/register') Register
    .container.content
      block content
    footer
      .row
        .col-12.text-center.py-3
          p &copy; #{new Date().getFullYear()} Closet Clash - All Rights Reserved.
          script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
          script(src='/javascripts/main.js')